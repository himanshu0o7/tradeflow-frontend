{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Module */
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    /* React / Next.js */
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,

    /* Strictness */
    "strict": false,
    "skipLibCheck": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Performance */
    "incremental": true
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}